/*PLATAFORMA*/
.plataform{
    width: 90%;
    margin: auto;
    margin-top: 120px;
    margin-bottom: 80px;
    border: #eee;
    background-color :#fff;
    border-radius: 5px;
    box-shadow:0px 3px 3px #ededed;
}

.plataform-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #dbdbdb;
    border-bottom: 1px solid #ededed;
    padding: 10px;
    padding-left: 20px;
    padding-right: 20px;
    font-size: 1.7em;
}

.plataform-header h1{
    text-transform: uppercase;
    color:#3d3d3d;
    font-size:1em;
}



.plataform-content{
    font-size: 1em;
    padding: 20px;
    overflow-x: auto;
}

.plataform-footer{
    color: #ccc;
    padding: 20px;
    display: flex;
    justify-content: flex-end;
}
    
.plataform-btn{
    box-shadow: 0px 3px 3px #ededed;
    display: inline-block;
    text-align: center;
    cursor: pointer;
    border-radius: 3px;
    padding: 5px;
    margin: .5%;
    background-color: #3698ce;
    color: #fff;
}


/*TABELA*/
table{ 
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    color: #61666b;
    box-shadow: 0px 3px 3px #eee;
    border-collapse:collapse;
}
    
thead{
    text-align: left;
    background-color: #CEDEED;
}   

tr:nth-child(even){
    background-color: #CEDEED;
}    

td,th{
    padding: 10px;
    text-transform:capitalize;
    border: 1px solid #eee;
}

