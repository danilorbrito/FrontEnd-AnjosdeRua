input[type="text"],input[type="email"],input[type="password"],input[type="radio"],input[type="number"]
    border none
    outline none
    background-color #ededed
    padding 8px
    display block
    width 100%
    margin-bottom 2%
    font-size .9em

form
    padding 5%

h1
    font-weight normal

.topo
    min-height 60px
    max-height 100px
    height 10vh
    position fixed
    z-index 30
    left 0
    right 0
    top 0
    background-color #0092CE
    box-shadow 0px 3px 3px #ededed
    display flex
    justify-content space-around

.topo > div
    width 40%
    display flex
    align-items center
    color #fff

.topo div:last-child
    justify-content flex-end

.topo-left   
    font-size 1.3em


.dropdown
    position relative
    display inline-block
    cursor pointer
    &:after
        content ' â–¼'

.dropdown-content 
    display none
    position absolute
    background-color #fff
    min-width 160px
    box-shadow 0px 3px 22px #ededed
    padding 8px
    z-index 1
    border-radius 3px
    text-align left
    color #bbb
    & :hover
        color #3d3d3d

.dropdown:hover .dropdown-content 
    display block

